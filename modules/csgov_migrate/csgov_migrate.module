  return [
    'taxonomy' => [
      'csgov_board_type',
      'csgov_tags',
      'csgov_news_type',
      'csgov_event_type',
    ],
    'file' => [NULL],
    'media' => [
      'document',
      'image',
      'csgov_icon',
    ],
    'paragraph' => [
      'csgov_hero',
      'csgov_content',
      'csgov_accordion_item',
      'csgov_accordion',
      'csgov_node_list',
      'csgov_tile',
      'csgov_tiles',
      'csgov_infopanel',
      'csgov_statsbar_item',
      'csgov_statsbar',
      'csgov_gallery',
      // 'csgov_embed_view',
    ],
    'menu' => [NULL],
    'node' => [
      'csgov_homepage',
      'csgov_landing_page',
      'csgov_directory_person',
      'csgov_directory_place',
      'csgov_event',
      'csgov_board',
